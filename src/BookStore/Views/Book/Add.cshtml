@using BookStore.Models.ViewModels
@model AddBookViewModel


<h2>افزودن کتاب جدید</h2>

<div class="row">
    <div class="col-md-6">
               
        <form method="post" asp-controller="Book" asp-action="Add"  enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="Book.Title">عنوان کتاب</label>
                <input asp-for="Book.Title" class="form-control" />
            </div>

          
            <div class="form-group">
                <label asp-for="Book.Author">نویسنده</label>
                <input asp-for="Book.Author" class="form-control" />
            </div>

           
            <div class="form-group">
                <label asp-for="Book.Price">قیمت</label>
                <input asp-for="Book.Price" type="number" class="form-control" />
            </div>

            
            <div class="form-group">
                <label asp-for="Book.PageCount">تعداد صفحات</label>
                <input asp-for="Book.PageCount" type="number" class="form-control" />
            </div>

          
            <div class="form-group">
                <label asp-for="ImageFile">عکس جلد</label>
                <input asp-for="ImageFile" type="file" class="form-control" />
            </div>

           
            <div class="form-group">
                <label asp-for="Book.CategoryId">دسته‌بندی</label>
             
                <select asp-for="Book.CategoryId" class="form-control">
                    <option value="">-- انتخاب کنید --</option>
                  
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
            </div>

            <br />
            <div class="form-group">
                <button type="submit" class="btn btn-primary">ثبت کتاب</button>
            </div>

        </form>
    </div>
</div>